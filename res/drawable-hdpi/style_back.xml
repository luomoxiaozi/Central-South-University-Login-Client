<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边缘线的宽度和颜色 -->
    <stroke android:width="1px" android:color="#F5FEFF" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient  android:startColor="#ECFCFE" android:centerColor="#F5FDFF" android:endColor="#E7F9FD" android:angle="270"/>
    <!-- 设置四个角的角度 -->
   <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
   <!-- 设置padding -->
   <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
</shape>