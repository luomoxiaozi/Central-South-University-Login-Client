<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边缘线的宽度和颜色 -->
    <stroke android:width="1px" android:color="#BEBEBE" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient  android:startColor="#00E3E3" android:centerColor="#4DFFFF" android:endColor="#00E3E3" android:angle="270"/>
    <!-- 设置四个角的角度 -->
   <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp"/>
   <!-- 设置padding -->
   <padding android:left="13dp" android:top="13dp" android:right="13dp" android:bottom="13dp"/>

</shape>
