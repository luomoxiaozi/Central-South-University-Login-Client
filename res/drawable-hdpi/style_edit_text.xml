<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边缘线的宽度和颜色 -->
    <stroke android:width="1px" android:color="#BEBEBE" />
    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->
    <gradient  android:startColor="#FFFFFF" android:centerColor="#F5FEFF" android:endColor="#FFFFFF" android:angle="270"/>
    <!-- 设置四个角的角度 -->
   <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp"/>
   <!-- 设置padding -->
   <padding android:left="10dp" android:top="20dp" android:right="10dp" android:bottom="20dp"/>
</shape>